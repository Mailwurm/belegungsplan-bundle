{
    "name": "mailwurm/belegungsplan-bundle",
    "type": "contao-bundle",
    "description": "Belegungsplaene erstellen Contao 4",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Jan Karai",
            "homepage": "http://www.sachsen-it.de"
        }
    ],
    "require": {
        "contao/core-bundle": "^4.4.2",
        "php": "^5.6|^7.0",
        "symfony/framework-bundle": "^3.3"
    },
    "conflict": {
        "contao/core": "*",
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "doctrine/doctrine-cache-bundle": "^1.3",
        "friendsofphp/php-cs-fixer": "^2.0",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/message-factory": "^1.0.2",
        "phpunit/phpunit": "^5.0",
        "satooshi/php-coveralls": "^1.0",
        "symfony/phpunit-bridge": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Mailwurm\\BelegungsplanBundle\\": "src/"
        },
        "classmap": [
            "src/Resources/contao/"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Mailwurm\\BelegungsplanBundle\\Tests\\": "tests/"
        }
    },
    "extra": {
        "contao-manager-plugin": "Mailwurm\\BelegungsplanBundle\\ContaoManager\\Plugin"
    },
    "config": {
        "preferred-install": "dist"
    }
}
